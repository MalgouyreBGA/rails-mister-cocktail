<div class="form">
    <h1>New Dose</h1>
    <h2><%= Cocktail.find(params[:cocktail_id]).name %></h2>
    <div class="bbtom"></div>
    <div class="d-flex justify-content-center">
        <%= simple_form_for ([@cocktail, @dose]) do |f| %>
        <%= f.association :ingredient, include_hidden: false %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-primary text-white" %>
        <% end %>
    </div>

    <div class="bbtom"></div>
    <button class="btn btn-primary"><%= link_to "Back", root_path, class: "text-white" %></button>
</div>