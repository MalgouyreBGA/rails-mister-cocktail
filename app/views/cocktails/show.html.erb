<div class="show">
    <h1>Show</h1>

    <h2><%= @cocktail.name %></h2>
    <div class="bbtom"></div>
    <div>
        <ul>
            <% @cocktail.doses.each do |dose| %>
            <li>
                <tr>
                    <td><%= dose.ingredient.name %></td>
                    <td><%= dose.description %></td>
                    <td>
                    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                        <i class="fa fa-trash destroy_dose"></i>
                    <% end %>
                    </td>
                </tr>
            </li>
            <% end %>
        </ul>
    </div>

    <button class="btn btn-primary">
        <%= link_to "Add dose",
        new_cocktail_dose_path(@cocktail),
        class: "text-white" %>
    </button>
    <div class="bbtom"></div>
    <button class="btn btn-primary"><%= link_to "Back", root_path, class: "text-white" %></button>
</div>
